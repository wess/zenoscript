{
  "name": "zenoscript",
  "displayName": "Zeno",
  "description": "Language support for Zenoscript",
  "repository": {
    "type": "git",
    "url": "https://github.com/wess/zenocode"
  },
  "version": "0.0.1",
  "publisher": "zenoscript",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "zenoscript",
        "aliases": [
          "Zenoscript",
          "zenoscript"
        ],
        "extensions": [
          ".zs"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "zenoscript",
        "scopeName": "source.zenoscript",
        "path": "./syntaxes/zenoscript.tmGrammar.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "bun run vscode:prepublish && vsce package",
    "publish": "bun run package && vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^4.9.4"
  }
}